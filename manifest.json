{
  "manifest_version": 3,
  "name": "Montara Chrome Extension",
  "version": "1.0.0",
  "description": "A Chrome extension boilerplate",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo_only_white.png",
      "48": "icons/logo_only_white.png",
      "128": "icons/logo_only_white.png"
    }
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.snowflake.com/*",
        "*://snowflake.com/*"
      ],
      "js": [
        "dist/content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/logo_only_white.png",
    "48": "icons/logo_only_white.png",
    "128": "icons/logo_only_white.png"
  }
}