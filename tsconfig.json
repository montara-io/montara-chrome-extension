{
  "compilerOptions": {
    "target": "ES2020",
    "module": "None",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "types": [
      "chrome"
    ],
    "isolatedModules": false,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}