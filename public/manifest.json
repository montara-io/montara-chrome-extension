{
  "manifest_version": 3,
  "name": "Montara Chrome Extension",
  "version": "1.0.0",
  "description": "A Chrome extension for Montara",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.snowflake.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.js.map"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}